<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.DictDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        select id,parent_id,name,dict_code,create_time,update_time,is_deleted
    </sql>

    <!--根据父节点来查询子节点-->
    <select id="findListByParentId" resultType="dict">
        <include refid="columns"></include>
        from hse_dict
        where parent_id=#{id} and is_deleted=0
    </select>

    <!--判断是否为父节点-->
    <select id="isDictParentNode" resultType="integer">
        select count(id) from hse_dict
        where parent_id=#{id}
    </select>

    <!--根据编码获取dict对象-->
    <select id="getDictByDictCode" resultType="dict">
        <include refid="columns"></include>
        from hse_dict
        where dict_code=#{dictCode}
    </select>

    <!--根据id获取name-->
    <select id="getnameById" resultType="string">
        select name from hse_dict where id =#{id}
    </select>



</mapper>