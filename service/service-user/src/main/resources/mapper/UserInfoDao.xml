<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.UserInfoDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        select id,phone,password,nick_name,status,create_time,update_time,is_deleted
    </sql>

    <!--通过手机号获取userInfo对象-->
    <select id="getUserInfoByPhone" resultType="userInfo">
        <include refid="columns"></include>
        from user_info
        where phone = #{phone} and is_deleted=0
    </select>

    <!--通过id查询会员-->
    <select id="getById" resultType="userInfo">
        <include refid="columns"></include>
        from user_info
        where id=#{id}
    </select>

    <!--插入userinfo-->
    <insert id="insert">
        insert into user_info
        (phone,password,nick_name,status)
        values
        (#{phone},#{password},#{nickName},#{status})
    </insert>

    <!--分页及带条件的查询-->
    <select id="findPage" resultType="userInfo">
        <include refid="columns"></include>
        from user_info
        <where>
            <if test="nickName != null and nickName != '' ">
                nick_name like "%"#{nickName}"%" and
            </if>
            <if test="phone != null and phone != '' ">
                phone=#{phone} and
            </if>
            is_deleted=0
        </where>
        order by id desc
    </select>

    <!--更新数据-->
    <update id="update">
        update user_info
        <set>
            <if test="phone != null and phone != ''">
                phone = #{phone} ,
            </if>
            <if test="password != null and password != ''">
                password=#{password} ,
            </if>
            <if test="nickName != null and nickName != ''">
                nick_name=#{nickName} ,
            </if>
            <if test="status != null and status != ''">
                status=#{status} ,
            </if>
        </set>
            where id = #{id}
    </update>

    <!--删除-->
    <update id="delete">
        update user_info set
        is_deleted = 1
        where id=#{id}
    </update>


</mapper>